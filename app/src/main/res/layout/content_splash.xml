<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_splash"
    tools:context="com.example.annuoaichengzhang.multiplelistviewdemo.activity.SplashActivity">


    <Button
        android:id="@+id/mt_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="多布局listview"
        />
    <Button
        android:id="@+id/lv_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="底部布局"
        android:layout_below="@id/mt_lv"
        />

    <Button
        android:id="@+id/lv_softinputtest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="softinputtest"
        android:layout_below="@id/lv_bottom"
        />


</RelativeLayout>
